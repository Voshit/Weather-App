<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:padding="16dp"
    android:background="@drawable/bg_glass_card">

    <ImageView
        android:id="@+id/pin_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_pin_outline"
        android:padding="2dp"
        app:tint="@color/textColorSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/city_name_tv"
        app:layout_constraintBottom_toBottomOf="@+id/city_name_tv"/>

    <TextView
        android:id="@+id/city_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="New York"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toEndOf="@+id/pin_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/temp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24Â°"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:fontFamily="sans-serif-bold"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/delete_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/city_name_tv" />

    <TextView
        android:id="@+id/weather_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Sky"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/delete_btn"
        app:layout_constraintTop_toBottomOf="@+id/temp_tv" />

    <TextView
        android:id="@+id/aqi_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AQI: 45 - Good"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_name_tv" />

    <ImageView
        android:id="@+id/delete_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_delete"
        app:tint="#FF5252"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
